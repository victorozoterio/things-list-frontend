{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "useExhaustiveDependencies": "off",
          "noUnusedVariables": "error",
          "noUnusedImports": "error"
        },
        "style": {
          "noParameterAssign": "off"
        },
        "performance": {
          "noBarrelFile": "off"
        },
        "a11y": {
          "useMediaCaption": "off"
        }
      }
    },
    "formatter": {
      "indentStyle": "space"
    },
    "javascript": {
      "formatter": {
        "lineWidth": 100,
        "quoteStyle": "single",
        "jsxQuoteStyle": "single"
      }
    },
    "files": {
      "ignore": ["node_modules", "dist", "*.d.ts", "package.json"]
    }
  }
  